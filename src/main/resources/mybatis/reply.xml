<select id="rlist" parameterType="Map" resultType="com.study.reply.ReplyDTO">
select reno, recontents, to_char(redate,'yyyy-mm-dd') redate, nick, bbsno, r
FROM(
        select reno, recontents, redate, nick, bbsno, rownum r
        FROM(
                select reno, recontents, redate, member.nick nick, bbsno
                from REPLY
           inner join member
    on REPLY.id = member.id
            
                order by reno DESC
           )
<![CDATA[
)WHERE r >= #{sno} and r <= #{eno}
]]>

</select>

